<Alloy>
   <ScrollView id="content" class="content">
        <Label id="eventTitle" class="event-title" />
        <View id="eventInfo" class="event-info">
            <Label id="eventDate" class="event-info-label" />
            <View class="disc-separator" />
            <Label id="eventTime" class="event-info-label" />
        </View>
        <Widget id="textShortened" src="text-shortened" />

        <View id="addToCalendar" class="action-view">
            <View id="addToCalendarIcon" class="action-icon">
                <ImageView id="addToCalendarIconImg" class="icon-add" />
            </View>
            <Label id="addToCalendarLabel" class="action-label" text="Add to Calendar" />
        </View>
        <View id="share" class="action-view">
            <View id="shareIcon" class="action-icon">
                <ImageView id="shareIconImg" class="icon-share" />
            </View>
            <Label id="shareLabel" class="action-label" text="Share it!" />
        </View>
   </ScrollView>
</Alloy>