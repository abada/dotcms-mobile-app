<Alloy>
    <View id="homeContent" class="home-content">
        <View id="homeStocks" class="home-stocks" />
        <ListView id="homeNews" class="home-news" defaultItemTemplate="template">
            <Templates>
                <ItemTemplate name="template" id="ItemTemplate" class="item-wrapper">
                    <ImageView bindId="image" id="image" class="image" />
                    <View id="contentWrapper" class="content-wrapper">
                        <Label bindId="title" id="title" class="title" />
                        <Label bindId="date" id="date" class="date" />
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection id="homeNewsSection" class="home-news-section" />
        </ListView>
    </View>
</Alloy>