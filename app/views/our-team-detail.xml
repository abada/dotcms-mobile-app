<Alloy>
   <ScrollView id="content" class="content">
        <ImageView id="teamMemberAvatar" class="team-member-avatar" />
        <Label id="teamMemberName" class="team-member-title" />
        <Label id="teamMemberjobTitle" class="team-member-jobtitle" />

        <View id="teamMemberPhone" class="action-view">
            <View id="teamMemberPhoneIcon" class="action-icon">
                <ImageView id="teamMemberPhoneIconImg" class="icon-phone" />
            </View>
            <Label id="teamMemberPhoneLabel" class="action-label" />
        </View>
        <View id="teamMemberEmail" class="action-view">
            <View id="teamMemberEmailIcon" class="action-icon">
                <ImageView id="teamMemberEmailIconIconImg" class="icon-email" />
            </View>
            <Label id="teamMemberEmailLabel" class="action-label" />
        </View>
        <View id="addToContacts" class="action-view">
            <View id="addToContactsIcon" class="action-icon">
                <ImageView id="addToContactsIconImg" class="icon-contacts" />
            </View>
            <Label id="addToContactsLabel" class="action-label" text="Add to contacts" />
        </View>
        <View id="share" class="action-view" platform="ios">
            <View id="shareIcon" class="action-icon">
                <ImageView id="shareIconImg" class="icon-share" />
            </View>
            <Label id="shareLabel" class="action-label" text="Share" />
        </View>
   </ScrollView>
</Alloy>