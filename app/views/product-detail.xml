<Alloy>
    <ScrollView id="content" class="content">
        <View class="page-title">
            <Label id="productTitle" class="product-title" />
            <View class="dotted-line" />
        </View>
        <View id="priceAndChange" class="price-change">
            <View id="viewIndicator" class="view-indicator">
                <ActivityIndicator id="activityIndicator" class="loader-indicator" show="true" />
            </View>
            <Label id="productPrice" class="product-price" />
            <Label id="productChange" class="product-change" />
        </View>
        <Label id="productDesc" class="product-description" />
        <View id="moreWrapper" class="more-wrapper">
            <View id="moreDottedLine" class="dotted-line" />
            <Button id="btnMore" class="btn-more" title="MORE" />
        </View>
    </ScrollView>
</Alloy>