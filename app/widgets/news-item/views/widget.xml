<Alloy>
    <TableViewRow id="newRow">
        <View class="item-wrapper">
            <View id="contentInfo" class="content-info">
                <Label id="newTitle" class="new-title" />
                <Label id="newDate" class="new-date" />
                <Label id="newLead" class="new-lead" />
            </View>
            <ImageView id="newImage" class="new-image" />
            <View id="newActions" class="new-actions">
                <View id="commentsButton" class="btn-view">
                    <ImageView id="commentsIcon" class="icn" image="/images/icn-comments.png" />
                    <Label id="newComments" class="btn-label" />
                </View>
                <View class="separator" />
                <View id="shareButton" class="btn-view">
                    <ImageView id="shareIcon" class="icn" image="/images/icn-share.png" />
                    <Label id="share" class="btn-label" text="Share" />
                </View>
                <View class="separator" />
                <Button id="read" class="btn-read" title="Read full article" />
            </View>
        </View>
    </TableViewRow>
</Alloy>